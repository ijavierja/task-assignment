generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Developer {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
  skills    Skill[]  @relation("developer_skills")

  @@map("developers")
}

model Skill {
  id         String      @id @default(cuid())
  name       String      @unique
  developers Developer[] @relation("developer_skills")
  tasks      Task[]      @relation("task_skills")

  @@map("skills")
}

model Task {
  id         String     @id @default(cuid())
  title      String
  status     TaskStatus @default(TODO)
  assigneeId String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  assignee   Developer? @relation(fields: [assigneeId], references: [id])
  skills     Skill[]    @relation("task_skills")

  @@index([assigneeId])
  @@index([createdAt])
  @@map("tasks")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}
